generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  price     String   
  abilities String
  createdAt DateTime @default(now())
}

// User Model e Email ar Password add kora hoyeche
model User {
  id           Int       @id @default(autoincrement())
  email        String?   @unique
  password     String?   
  telegramId   String?   @unique // Optional kora hoyeche
  firstName    String?
  balanceUsd   Float     @default(0.0) 
  deposits     Deposit[] 
  createdAt    DateTime  @default(now())
}

model Deposit {
  id            Int      @id @default(autoincrement())
  userId        Int
  user          User     @relation(fields: [userId], references: [id])
  method        String   
  amountBdt     Float    
  senderNumber  String   
  trxId         String   @unique
  status        String   @default("PENDING") 
  createdAt     DateTime @default(now())
}
