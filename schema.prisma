generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        Int        @id @default(autoincrement())
  name      String
  price     String   
  abilities String
  imageId   String?  
  driveLink String?  
  stock     Int        @default(1)
  rating    Float      @default(5.0) 
  createdAt DateTime   @default(now())
  purchases Purchase[] 
}

model User {
  id           Int        @id @default(autoincrement())
  email        String?    @unique
  password     String?   
  telegramId   String?    @unique 
  firstName    String?
  country      String     @default("BD") 
  balanceUsd   Float      @default(0.0) 
  refCode      String?    @unique   // <--- FIXED: Made optional for old users
  isVip        Boolean    @default(false)
  vipExpiry    DateTime?
  deposits     Deposit[] 
  purchases    Purchase[] 
  createdAt    DateTime   @default(now())
}

model Promo {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  discount  Int      
  isActive  Boolean  @default(true)
}

model Deposit {
  id            Int      @id @default(autoincrement())
  userId        Int
  user          User     @relation(fields: [userId], references: [id])
  method        String   
  amountBdt     Float    
  senderNumber  String   
  trxId         String   @unique
  status        String   @default("PENDING") 
  createdAt     DateTime @default(now())
}

model Purchase {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  productId Int
  product   Product  @relation(fields: [productId], references: [id])
  pricePaid Float
  createdAt DateTime @default(now())
}

model Notice {
  id        Int      @id @default(autoincrement())
  text      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}
